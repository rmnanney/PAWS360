# Auth Service Environment Variables
# Configuration for AdminLTE authentication service

# Database Configuration
POSTGRES_HOST={{ postgres_host | default('localhost') }}
POSTGRES_PORT={{ postgres_port | default('5432') }}
POSTGRES_DB={{ postgres_db | default('adminlte') }}
POSTGRES_USER={{ postgres_user | default('adminlte') }}
POSTGRES_PASSWORD={{ postgres_password }}

# Redis Configuration
REDIS_HOST={{ redis_host | default('localhost') }}
REDIS_PORT={{ redis_port | default('6379') }}
REDIS_PASSWORD={{ redis_password | default('') }}

# SAML2 Configuration
SAML_METADATA_URL={{ saml_metadata_url | default('https://login.university.edu/adfs/metadata.xml') }}
SAML_ENTITY_ID={{ saml_entity_id | default('adminlte-sp') }}
SAML_ACS_URL={{ saml_acs_url | default('https://admin.paws360.university.edu/saml/acs') }}
SAML_KEYSTORE_PASSWORD={{ saml_keystore_password | default('change-this') }}
SAML_KEY_PASSWORD={{ saml_key_password | default('change-this') }}

# JWT Configuration
JWT_SECRET={{ jwt_secret | default('change-this-in-production') }}
JWT_EXPIRATION={{ jwt_expiration | default('86400') }}

# Application Configuration
SPRING_PROFILES_ACTIVE={{ spring_profiles | default('production') }}
JAVA_OPTS={{ java_opts | default('-Xmx1g -Xms512m') }}
LOG_LEVEL={{ log_level | default('INFO') }}

# Service Configuration
AUTH_SERVICE_PORT={{ auth_service_port | default('8081') }}
# PAWS360 Docker Environment Configuration
# Copy this file to .env and update values as needed

# Application Settings
APP_ENV=docker
APP_PORT=8080
SSL_PORT=8443

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=paws360_dev
DB_USERNAME=paws360
DB_PASSWORD=paws360_dev_password
DB_READ_USERNAME=readonly
DB_READ_PASSWORD=readonly_password
DB_READ_PORT=5433

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=paws360_redis_password
REDIS_MAX_MEMORY=256mb

# JWT Configuration
JWT_SECRET=paws360_jwt_secret_key_change_in_production

# SAML Configuration (for production)
SAML_ENTITY_ID=paws360
SAML_IDP_METADATA_URL=https://login.microsoftonline.com/tenant-id/federationmetadata/2007-06/federationmetadata.xml

# Service Ports
AUTH_SERVICE_PORT=8081
DATA_SERVICE_PORT=8082
ANALYTICS_SERVICE_PORT=8083
UWM_AUTH_PORT=8084

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=adminlte_grafana_password

# Java Memory Settings
JAVA_MAX_HEAP=512m
JAVA_MIN_HEAP=256m

# Docker Network
DOCKER_NETWORK_SUBNET=172.20.0.0/16
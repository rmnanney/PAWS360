# PAWS360 Environment Configuration Template
# Copy this file to .env and fill in your actual values

# JIRA Integration Settings
JIRA_URL=https://your-jira-instance.atlassian.net
JIRA_PROJECT_KEY=PAWS360
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=paws360
DB_USERNAME=paws360_user
DB_PASSWORD=your-db-password

# SAML Authentication (Azure AD)
SAML_ENTITY_ID=https://paws360.university.edu
SAML_IDP_METADATA_URL=https://login.microsoftonline.com/your-tenant-id/federationmetadata/2007-06/federationmetadata.xml
SAML_CERTIFICATE_PATH=/path/to/saml/certificate.pem
SAML_PRIVATE_KEY_PATH=/path/to/saml/private-key.pem

# Redis Configuration (Session Store)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Application Settings
APP_ENV=development
APP_PORT=8080
APP_DEBUG=true
LOG_LEVEL=INFO

# Security Settings
JWT_SECRET=your-jwt-secret-key-here
SESSION_TIMEOUT=3600

# PeopleSoft Integration
PEOPLESOFT_URL=https://peoplesoft.university.edu
PEOPLESOFT_USERNAME=integration_user
PEOPLESOFT_PASSWORD=your-peoplesoft-password

# Email Configuration
SMTP_HOST=smtp.university.edu
SMTP_PORT=587
SMTP_USERNAME=notifications@university.edu
SMTP_PASSWORD=your-smtp-password

# File Upload Settings
UPLOAD_MAX_SIZE=10MB
UPLOAD_PATH=/var/paws360/uploads

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20
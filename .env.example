# PAWS360 CI/CD Environment Configuration
# Copy this file to .env and update values for your environment

# Application Settings
APP_ENV=development
APP_PORT=8080
SSL_PORT=8443
NEXT_PUBLIC_API_BASE=http://localhost:8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=paws360_dev
DB_USERNAME=paws360
DB_PASSWORD=your_secure_db_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_256_bit_jwt_secret_key_here_change_in_production
JWT_EXPIRATION=86400000

# SAML Configuration (for production)
SAML_ENTITY_ID=paws360
SAML_IDP_METADATA_URL=https://login.microsoftonline.com/tenant-id/federationmetadata/2007-06/federationmetadata.xml

# Service Ports (for microservices architecture)
AUTH_SERVICE_PORT=8081
DATA_SERVICE_PORT=8082
ANALYTICS_SERVICE_PORT=8083
UWM_AUTH_PORT=8084

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=secure_grafana_password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/paws360/application.log

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8085
SESSION_TIMEOUT=3600000

# Docker Registry (for CI/CD)
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=${{ github.actor }}
DOCKER_PASSWORD=${{ secrets.GITHUB_TOKEN }}

# Test Database (for CI/CD)
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_NAME=paws360_test
TEST_DB_USERNAME=paws360_test
TEST_DB_PASSWORD=test_password

# Test Redis (for CI/CD)
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6380
TEST_REDIS_PASSWORD=test_redis_password

# CI/CD Specific
CI_JWT_SECRET=test_jwt_secret_key_for_ci_cd
CI_APP_ENV=test
CI_APP_DEBUG=true

# Java Memory Settings
JAVA_MAX_HEAP=1024m
JAVA_MIN_HEAP=512m

# Docker Network
DOCKER_NETWORK_SUBNET=172.20.0.0/16

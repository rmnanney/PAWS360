{
  "name": "paws360-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-End tests for PAWS360 UI flows (SSO tests are retired)",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "install-browsers": "playwright install chromium",
    "wait-for-next": "wait-on -t 120000 http://localhost:3000"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

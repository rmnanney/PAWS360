{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["@playwright/test", "node"]
  },
  "include": [
    "tests/**/*",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}